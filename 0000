<?php
$test = $_COOKIE['profile'];
echo $test;
$curl = curl_init();
$postData = array("status" => $test, "agentId" => "123456");
$data_string = json_encode($postData);
curl_setopt_array($curl, array(
  CURLOPT_URL => "https://wsdev.viriyah.co.th/ViriyahWSPolicy/SendEPolicyVMIRealTime",
  CURLOPT_RETURNTRANSFER => true,
  CURLOPT_ENCODING => "",
  CURLOPT_MAXREDIRS => 10,
  CURLOPT_TIMEOUT => 0,
  CURLOPT_FOLLOWLOCATION => false,
  CURLOPT_HTTP_VERSION => CURL_HTTP_VERSION_1_1,
  CURLOPT_CUSTOMREQUEST => "POST",
  CURLOPT_POSTFIELDS => $data_string,
  CURLOPT_HTTPHEADER => array(
    "Content-Type: application/json",
    "Authorization: Basic dGVzdDp0ZXN0"
  ),
));

$response = curl_exec($curl);

curl_close($curl);

?>

<!DOCTYPE html>
<html>
    <head>
        <title>Hello jQuery</title>
        <meta charset="UTF-8">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    </head>

    <body>
        <script>
        $(document).ready(function(){
            $.cookie("profile", 1);
            var aa = <?php echo $response; ?>;
            console.log(aa)
            console.log(aa.result)
            console.log(aa.errorCode)
            console.log(aa.errorMsg)
        })
        </script>
    </body>
</html>
