<style>
.pagination span:hover{ cursor: pointer; }
</style>
<body>
	<div class="container">
		<table class="table table-striped table-class" id= "table-id">
			<tr><th>Name</th><th>Email</th></tr>
			<tr><td>1-636-140-1210</td><td>Oct 26, 2015</td></tr>
			<tr><td>1-962-122-8834</td><td>Aug 2, 2015</td></tr>
			<tr><td>1-584-906-8572</td><td>Sep 15, 2015</td></tr>
			<tr><td>1-364-156-9666</td><td>Nov 28, 2015</td></tr>
			<tr><td>1-646-420-3211</td><td>Aug 4, 2016</td></tr>
			<tr><td>Ivan Vasquez</td><td>1-626-851-7695</td></tr>
			<tr><td>1-636-140-1210</td><td>Oct 26, 2015</td></tr>
		</table>
		<div class='pagination-container' >
			<span class="pagination">
				<span data-page="prev" ><span> < <span class="sr-only"></span></span></span>
				<span data-page="next" id="prev"><span> > <span class="sr-only"></span></span></span>
			</span>
		</div>
</div>
<script>
getPagination('#table-id');	 
function getPagination (table) 
{
	var lastPage = 1 ; 
	$('.pagination').find("li").slice(1, -1).remove();
	var trnum = 0 ;		// reset tr counter 
	var maxRows = 2;	// get Max Rows from select option
	var totalRows = $(table+' tbody tr').length;
	$(table+' tr:gt(0)').each(function() 
	{			
		trnum++;	
		if (trnum > maxRows )
		{						
			$(this).hide();	
		}
		
		if (trnum <= maxRows )
		{
			$(this).show();
		}
	});	

	if (totalRows > maxRows)
	{						
		var pagenum = Math.ceil(totalRows/maxRows);		
		for (var i = 1; i <= pagenum ;)
		{	
			$('.pagination #prev').before('<span data-page="'+i+'"><span>'+ i++ +'<span class="sr-only">&nbsp;&nbsp;&nbsp;</span></span></span>').show();
		}											
	} 	

	$('.pagination [data-page="1"]').addClass('active'); 
	$('.pagination span').on('click',function(evt)
	{		
		evt.preventDefault();
		var pageNum = $(this).attr('data-page');
		var maxRows = 2;
		lastPage = pageNum ;
		var trIndex = 0 ;	
		$('.pagination span').removeClass('active');	
		$('.pagination [data-page="'+lastPage+'"]').addClass('active');
		$(table+' tr:gt(0)').each(function()
		{	
			trIndex++;	
			if (trIndex > (maxRows*pageNum) || trIndex <= ((maxRows*pageNum)-maxRows))
			{
				$(this).hide();		
			}
			else 
			{
				$(this).show();
			} 
		}); 
	});		
}	
</script>
</body>
</html>
